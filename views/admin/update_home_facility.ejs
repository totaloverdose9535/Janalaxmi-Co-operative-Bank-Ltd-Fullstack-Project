<%- include("navbar.ejs") %>


<form action="/admin/update_home_facility/<%-edit_facility.home_facility_id%>" enctype="multipart/form-data" method="post">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="mb-3 col-md-12 text-center">
                <h3>Edit Home Facilitis</h3>
            </div>
            
            <div class="mb-3 col-md-8">
                Facility Heading
                <input type="text" name="facility_header" value="<%-edit_facility.facility_header%>" class="form-control">
            </div>
            <div class="mb-3 col-md-6">
                Facility Detail
                <textarea name="facility_detail" value="" class="form-control" style="height: 150px;">
                    <%-edit_facility.facility_detail%>
                </textarea>
            </div>
            <div class="mb-3 col-md-3">
                Facility Image
                <input type="file" name="facility_image" value="" class="form-control">
            </div>
            <div class="mb-3 col-md-3">
              <img src="/uploads/<%-edit_facility.facility_image%>" style="height: 100px;width: 100px;">
            </div>
            <div class="col-md-12 text-center">
                <button class="btn btn-primary btn-lg">Save </button>
            </div>
        </div>
    </div>
</form>



