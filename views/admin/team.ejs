<form action="/admin/save_team_manager" method="post" enctype="multipart/form-data">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="mb-3 col-md-12 text-center">
                <h3>Add Team Manager Info</h3>
            </div>
            
            <div class="mb-3 col-12 col-md-6">
                Manager Picture
                <input type="file" name="manager_image" class="form-control pb-5" accept="image/*">
            </div>
    
            <div class="mb-3 col-12 col-md-6">
                Manager Name
                <input type="text" name="manager_name" class="form-control">
            </div>

            <div class="mb-3 col-12 col-md-6">
                Manager Position
                <input type="text" name="manager_position" class="form-control">
            </div>

            <div class="mb-3 col-12 col-md-6">
                Manager Details
                <input type="text" name="manager_details" class="form-control">
            </div>

            <div class="mb-3 col-12 col-md-6">
                Manager twitter Link
                <input type="text" name="manager_twitter" class="form-control">
            </div>

            <div class="mb-3 col-12 col-md-6">
                Manager Details Link
                <input type="text" name="manager_facebook" class="form-control">
            </div>
    
            <div class="mb-3 col-12 text-center">
                <button class="btn btn-primary">Save Details</button>
            </div>
        </div>
    </div>
    </form>

    <br><br>
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3>Team Manager Details</h3>
                <br>
            </div>
            <div class="col-md-12">
                <table class="table table-sm table-bordered">
                    <tr>
                        <th>Action</th>
                        <th>SN</th>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Details</th>
                        <th>Twitter Link</th>
                        <th>Facebook Link</th>
                        <th>Image</th>
                    </tr>
                    <% for(i=0;i<manager_details.length;i++) { %>
    
                        <tr>
                            <td style="white-space: nowrap;">
                                <a href="/admin/delete_manager_details/<%- manager_details[i].team_manager_details_id %>">
                                    <button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                                </a>  
                            </td>
                            <td><%-i+1%></td>
                            <td><%-manager_details[i].manager_name%></td>
                            <td><%-manager_details[i].manager_position%></td>
                            <td><%-manager_details[i].manager_details%></td>
                            <td><%-manager_details[i].manager_twitter%></td>
                            <td><%-manager_details[i].manager_facebook%></td>
                            <td><img src="/uploads/<%-manager_details[i].manager_image%>" width="100px"></td>
    
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div><hr><br>









