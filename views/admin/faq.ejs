<%- include('navbar.ejs') %>

<form action="/admin/save_faq_question" method="post" enctype="multipart/form-data">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="mb-3 col-md-12 text-center">
                <h3>Add FAQ Question</h3>
            </div>
    
            <div class="mb-3 col-12">
                Enter Question 
                <input type="text" name="faq_question" class="form-control">
            </div>
    
            <div class="mb-3 col-12 text-center">
                <button class="btn btn-primary">Save Details</button>
            </div>
        </div>
    </div>
    </form>

    <br><br>
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3>FAQ Questions</h3>
                <br>
            </div>
            <div class="col-md-12">
                <table class="table table-sm table-bordered">
                    <tr>
                        <th>Action</th>
                        <th>SN</th>
                        <th>FAQ Questions</th>

                    </tr>
                    <% for(i=0;i<faq_question.length;i++) { %>
    
                        <tr>
                            <td style="white-space: nowrap;">
                                <a href="/admin/delete_faq_question/<%- faq_question[i].faq_questions_id %>">
                                    <button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                                </a>  
                            </td>
                            <td><%-i+1%></td>
                            <td><%-faq_question[i].faq_question%></td>
                            
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>

<br><br>
    <form action="/admin/save_faq_answer" method="post" enctype="multipart/form-data">
        <div class="container-fluid bg-white p-4">
            <div class="row">
                
                <div class="mb-3 col-md-12">
                    <h3>Add FAQ Answer</h3>
                </div>
                

                <div class="mb-3 col-12">
                    Select Question 
                    <select name="faq_questions_id" class="form-control" style="height: auto;">
                        <% for(var i=0;i<faq_question.length;i++) { %>
                            <option value="<%=faq_question[i].faq_questions_id%>"><%=faq_question[i].faq_question%></option>
                        <% } %>
                            </select>
                </div>

                <div class="mb-3 col-12">
                    Enter Answer 
                    <input type="text" name="faq_answer" class="form-control">
                </div>
        
                <div class="mb-3 col-12 text-center">
                    <button class="btn btn-primary">Save Details</button>
                </div>
            </div>
        </div>
        </form>


        <br><br>
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="col-md-12">
                <h3>FAQ Answers</h3>
                <br>
            </div>
            <div class="col-md-12">
                <table class="table table-sm table-bordered">
                    <tr>
                        <th>Action</th>
                        <th>SN</th>
                        <th>Question Id</th>
                        <th>FAQ Answers</th>

                    </tr>
                    <% for(i=0;i<faq_answer.length;i++) { %>
    
                        <tr>
                            <td style="white-space: nowrap;">
                                <a href="/admin/delete_faq_answer/<%- faq_answer[i].faq_answers_id %>">
                                    <button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                                </a>  
                            </td>
                            <td><%-i+1%></td>
                            <td><%-faq_answer[i].faq_questions_id%></td>
                            <td><%-faq_answer[i].faq_answer%></td>
                            
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>    
<%- include('footer.ejs') %>
