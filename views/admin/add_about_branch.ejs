<%- include("navbar.ejs") %>


<form action="/admin/save_about_branch" enctype="multipart/form-data" method="post">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="mb-3 col-md-12 text-center">
                <h3>Add Branch </h3>
            </div>
            
            <div class="mb-3 col-md-6">
                City
                <input type="text" name="branch_city" value="" required class="form-control">
            </div>
            <div class="mb-3 col-md-6">
                Branch Header
                <input type="text" name="branch_header" value="" required class="form-control">
            </div>
            <div class="mb-3 col-md-6">
                Branch Lane
                <input type="text" name="branch_lane" value="" required class="form-control">
            </div>
            <div class="mb-3 col-md-6">
                Branch Lane2
                <input type="text" name="branch_lane2" value="" required class="form-control">
            </div>
            <div class="mb-3 col-md-6">
                Dist
                <input type="text" name="branch_dist" value="" required class="form-control">
            </div>
            <div class="mb-3 col-md-6">
                Branch Mobile
                <input type="number"  name="branch_no" value="" required class="form-control">
            </div>
            
            <div class="mb-3 col-md-12 ml-5 text-center">
                <button class="btn btn-primary">Save Details</button>
            </div>
        </div>
    </div>
</form><hr>

<div class="container-fluid bg-white p-4">
    <div class="row">
        <div class="mb-3 col-md-12 text-center">
          <h3>Branch List</h3>
        </div>
        <div class="mb-3 col-md-12"> 

            <table class="table table-bordered table-stripped table-hover">
       
            <tr>
                <th style="width: 15%;" >Action</th>
                <th>Sr</th>
                <th>City</th>
                <th>Branch Header</th>
                <th>Branch Lane</th>
                <th>Branch Lane2</th>
                <th>District</th>
                <th>Branch Mobile</th>
            </tr>
            <% for(var i=0;i<branch.length;i++) { %>
                <tr>
                    <td>
                        <a href="/admin/edit_branch/<%-branch[i].about_branch_id%>" >
                            <button class="btn btn-primary" onclick="alert('Are You Sure....?')">
                                <i class="fa fa-edit"></i>
                            </button>
                        </a>
                        <a href="/admin/delete_branch/<%-branch[i].about_branch_id%>" >
                            <button class="btn btn-danger" onclick="alert('Are You Sure....?')">
                                <i class="fa fa-trash"></i>
                            </button>
                        </a>
                    </td>
                    <td><%- i+1 %></td>
                    <td><%-branch[i].branch_city%></td>
                    <td><%-branch[i].branch_header%></td>
                    <td><%-branch[i].branch_lane%></td>
                    <td><%-branch[i].branch_lane2%></td>
                    <td><%-branch[i].branch_dist%></td>
                    <td><%-branch[i].branch_no%></td>
                    

                </tr>
            <% } %>
            
            </table>
        </div>
    </div>
</div>


<%- include("footer.ejs") %>