<%- include("navbar.ejs") %>


<form action="/admin/save_notice_info" enctype="multipart/form-data" method="post">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="mb-3 col-md-12 text-center">
                <h3>Notice Page Info</h3>
            </div>
            <div class="mb-3 col-md-4">
                Choose Notice Page Image
                <input type="file" name="notice_page_image" value=""   class="form-control">
            </div>
            <div class="mb-3 col-md-4">
                <img src="/uploads/<%-notice_info.notice_page_image%>" style="height: 100px;width: 150px;">
                
            </div>
            <div class="mb-3 col-md-4">
                Notice Page Title
                <input type="text" name="notice_page_title" value="<%-notice_info.notice_page_title%>"   class="form-control">
            </div>
            
            <div class="mb-3 col-md-12 ml-5 text-center">
                <button class="btn btn-primary">Save Details</button>
            </div>
        </div>
    </div>
</form><hr>


 

