<%- include("navbar.ejs") %>


<form action="/admin/save_edit_service/<%-service[0].service_id%>" enctype="multipart/form-data" method="post">
    <div class=" container-fluid bg-white p-4">
        <div class=" row">
            <div class=" mb-3 col-md-12 text-center">
                <h3>Add Service </h3>
            </div>
            <div class=" mb-3 col-md-3">
                Choose Service Image
                <input type="file" name="service_image" value=""  class="form-control">
            </div>
            <div class=" mb-3 col-md-3">
               <img src="/uploads/<%-service[0].service_image%>" style="height: 100px;width: 100px;">
            </div>

            <div class=" mb-3 col-md-6">
                Service Title
                <input type="text" name="service_title" value="<%-service[0].service_title%>" class="form-control">
            </div>
            <div class=" mb-3 col-md-6">
                Service Description
                <!-- <textarea name="service_description" class="form-control" style="height:  80px;"><%-service[0].service_description%></textarea> -->
                <input type="text" name="service_description" value="<%-service[0].service_description%>" class="form-control">
            </div>
            <div class=" mb-3 col-md-4">
                Service Icon
                
                <input type="text" name="service_icon" value="" readonly  class="form-control ">
            </div>
            <div class=" mb-3 col-md-2" >
                <%-service[0].service_icon%>
            </div>
            
            <div class=" mb-3 col-md-12 ml-5">
                <button class="btn btn-primary">Save Details</button>
            </div>
        </div>
    </div>
</form><hr>



