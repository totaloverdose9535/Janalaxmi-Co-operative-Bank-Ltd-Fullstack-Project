<%- include("navbar.ejs") %>
<form action="/admin/save_company_details" enctype="multipart/form-data" method="post">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="mb-5 col-md-12 text-center">
                <h3>Janlakshmi Multistate Details</h3>
            </div>
            <div class="mb-3 col-md-6">
                Company Name 
                <input type="text" name="company_name" value="<%-company_info.company_name %>" readonly  class="form-control">
            </div>
            <div class="mb-3 col-md-6">
                Company Email 
                <input type="email" name="company_email" value="<%-company_info.company_email%>"  class="form-control">
            </div>
            <div class="mb-3 col-md-6">
                Company Mobile 
                <input type="number" name="company_mobile" value="<%-company_info.company_mobile%>"  class="form-control">
            </div>
            <div class="mb-3 col-md-3">
                Company Logo 
                <input type="file" name="company_logo"  class="form-control">
            </div>
            <div class="mb-3 col-md-2">
                <img src="/uploads/<%-company_info.company_logo%>" 
                style="height: 150px;width: 150px;margin-top: -10px;margin-bottom: -20px;">
            </div>
            
            <div class="mb-3 col-md-12">
                Company Address 
                <textarea  name="company_address"  class="form-control" readonly><%-company_info.company_address%></textarea>
            </div>
            <div class="mb-4 col-md-6">
                Working Days
                <input type="text" name="working_days" value="<%-company_info.working_days%>"  class="form-control">
            </div>
            <div class="mb-4 col-md-6">
                Working Hour 
                <input type="text" name="working_hour" value="<%-company_info.working_hour%>"  class="form-control">
            </div>


            <div class="mb-4 col-md-3">
                Instagram Link 
                <input type="url" name="instagram_link" value="<%-company_info.instagram_link%>"  class="form-control">
            </div>
            <div class="mb-4 col-md-3">
                Twitter Link 
                <input type="url" name="twitter_link" value="<%-company_info.twitter_link%>"  class="form-control">
            </div>
            <div class="mb-4 col-md-3">
                Telegram Link 
                <input type="url" name="telegram_link" value="<%-company_info.telegram_link%>"  class="form-control">
            </div>
            <div class="mb-4 col-md-3">
                Google Link 
                <input type="url" name="google_link" value="<%-company_info.google_link%>"  class="form-control">
            </div>
           
            <div class="mb-4 col-md-3">
                Youtube Link 
                <input type="url" name="youtube_link" value="<%-company_info.youtube_link%>"  class="form-control">
            </div>
            <div class="mb-4 col-md-3">
                Facebook Link 
                <input type="url" name="facebook_link" value="<%-company_info.facebook_link%>"  class="form-control">
            </div>
            <div class="mb-4 col-md-3">
                Linkedin Link 
                <input type="url" name="linkedin_link" value="<%-company_info.linkedin_link%>"  class="form-control">
            </div>
            <div class="mb-4 col-md-3">
                WhatsApp no 
                <input type="number" name="whatsapp_no" value="<%-company_info.whatsapp_no%>" class="form-control">
            </div>
            <div class="mb-4 col-md-6">
                Company Award
                <input type="text" name="award" value="<%-company_info.award%>"  class="form-control">
            </div>
            <div class="mb-4 col-md-6">
                Company Satisfied members
                <input type="text" name="satisfied_member" value="<%-company_info.satisfied_member%>"  class="form-control">
            </div>
            <div class="mb-4 col-md-6">
                Company Business
                <input type="text" name="business" value="<%-company_info.business%>"  class="form-control">
            </div>
            <div class="mb-4 col-md-6">
                Company Working Branch
                <input type="text" name="working_branch" value="<%-company_info.working_branch%>"  class="form-control">
            </div>
            <div class="mb-4 col-md-12 text-center">
                <button class="btn btn-primary">Save Details</button>
            </div>
        </div>
    </div>
</form>
 
<%- include("footer.ejs") %>