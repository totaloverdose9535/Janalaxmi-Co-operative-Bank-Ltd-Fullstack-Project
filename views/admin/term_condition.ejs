<%- include("navbar.ejs") %>

<form action="/admin/save_t&c_info" enctype="multipart/form-data" method="post">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="mb-3 col-md-12 text-center mb-5">
                <h3>Term & Condition Page Info</h3>
            </div>
            <div class="mb-3 col-md-4">
                Choose Background Page Image
                <input type="file" name="t_c_page_image"    class="form-control">
            </div>
            <div class="mb-3 col-md-4">
                <img src="/uploads/<%-tc_info.t_c_page_image%>" style="height: 100px;width: 150px;">
                
            </div>
            <div class="mb-3 col-md-4">
                 Title
                <input type="text" name="t_c_page_title" value="<%-tc_info.t_c_page_title%>"   class="form-control">
            </div>
            
            <div class="mb-3 col-md-12 ml-5 text-center">
                <button class="btn btn-primary">Save Details</button>
            </div>
        </div>
    </div>
</form><hr>




