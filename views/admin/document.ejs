<%- include("navbar.ejs") %>
<form action="/admin/save_document" enctype="multipart/form-data" method="post">
    <div class="container-fluid bg-white p-2">
        <div class="row">
            <div class="mb-3 col-md-12 col-sm-12">
                <h3> Add Document</h3>
            </div>
            <div class="mb-3 col-md-2 col-sm-12">
                
            </div>
            <div class="mb-3 col-md-7 col-sm-12">
                Document
                <input type="text" name="document" required class="form-control">
            </div>
           
            <div class="col-md-12 text-center">
                <button class="btn btn-primary btn-lg">Save </button>
            </div>
        </div>
    </div>
</form><br><hr>

<div class="container-fluid bg-white p-4">
    <div class="row">
        <div class="mb-3 col-md-12 text-center">
          <h3>Document Heading</h3>
        </div>
        <div class="mb-3 col-md-12"> 

            <table class="table table-bordered table-stripped table-hover text-center">

            <tr class="text-center">
                <th style="width: 20%;margin-left: 20px;text-align: center;">Action</th>
                <th style="text-align: center;">Document Heading</th>
            </tr>
            <% for (var i=0;i<heading.length;i++) { %>
            <tr>
                <td>
                    <a href="/admin/edit_document_heading/<%-heading[0].heading_id%>" >
                        <button class="btn btn-primary" onclick="alert('Are You Sure....?')">
                            <i class="fa fa-edit"></i>
                        </button>
                    </a>
                </td>
                <td><%-heading[0].document_heading%></td>
            </tr>
            <% }%>
            </table>
        </div>
    </div>
</div><br>

<div class="container-fluid bg-white p-4">
    <div class="row">
        <div class="mb-3 col-md-12 text-center">
          <h3>Home Document List</h3>
        </div>
        <div class="mb-3 col-md-12"> 

            <table class="table table-bordered table-stripped table-hover">
            <tr style="text-align: center;">
                <th style="width: 15%; margin-left: 30px;text-align: center;" >Action</th>
                <th>Sr</th>
                <th class="text-center">Documents</th>
            </tr>
            <% for (var i=0;i<documents.length;i++) { %>
                <tr>
                    <td class="text-center">
                        <a href="/admin/edit_document/<%-documents[i].document_id%>" >
                            <button class="btn btn-primary" onclick="alert('Are You Sure....?')">
                                <i class="fa fa-edit"></i>
                            </button>
                        </a>
                        <a href="/admin/delete_document/<%-documents[i].document_id%>" >
                            <button class="btn btn-danger" onclick="alert('Are You Sure....?')">
                                <i class="fa fa-trash"></i>
                            </button>
                        </a>
                    </td>
                    <td><%- i+1%></td>
                    <td><%-documents[i].document%></td>
                </tr>
                <% }%>
            </table>
        </div>
    </div>
</div>

<%- include("footer.ejs") %>