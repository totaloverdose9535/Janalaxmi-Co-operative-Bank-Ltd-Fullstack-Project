    <script type="text/javascript">
        function calculateMaturity() {
            // Get the values from the input fields
            let principal = parseFloat(document.getElementById('principal').value);
            let interestRate = parseFloat(document.getElementById('interest').value);
            let years = parseInt(document.getElementById('years').value);

            // Validate the inputs
            if (isNaN(principal) || principal <= 0 || isNaN(interestRate) || interestRate <= 0 || isNaN(years) || years <= 0) {
                alert("Please enter valid values for all fields.");
                return;
            }

            // Convert interest rate to decimal (e.g., 5% becomes 0.05)
            let rate = interestRate / 100;

            // Compound Interest Formula: A = P * (1 + r/n)^(nt)
            // Assuming interest is compounded annually, n = 1
            let maturityAmount = principal * Math.pow((1 + rate), years);

            // Display the result
            document.getElementById('maturityAmount').textContent = maturityAmount.toFixed(2);
        }
    </script>

